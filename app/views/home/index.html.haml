%h1
  Hello #{current_user.first_name} #{current_user.last_name} !
%p
  How are you today?
.inv-butt
  = link_to "Create a new invitation", new_invitation_path
%br
%br  
%h3 Events waiting for you
%table
  %thead
    %tr
      %th Name
      %th Start date
      %th End date
      %th Location
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @future_events.each do |event|
      %tr
        %td= event.name
        %td= event.start_date.strftime("%d/%m/%Y %H:%M")
        %td= event.end_date.strftime("%d/%m/%Y %H:%M")
        %td= event.location
        %td= event.description
        - if logged_in?
          %td= link_to 'Show', "/events/show/#{event.id}"
          %td= link_to 'Edit', "/events/edit/#{event.id}"
          %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
%br
%br          
%h3 Events that took part in
%table
  %thead
    %tr
      %th Name
      %th Start date
      %th End date
      %th Location
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @past_events.each do |event|
      %tr
        %td= event.name
        %td= event.start_date.strftime("%d/%m/%Y %H:%M")
        %td= event.end_date.strftime("%d/%m/%Y %H:%M")
        %td= event.location
        %td= event.description
        - if logged_in?
          %td= link_to 'Show', "/events/show/#{event.id}"
          %td= link_to 'Edit', "/events/edit/#{event.id}"
          %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
%br
%br
.inv-butt
  = link_to "Create a new event", new_event_path
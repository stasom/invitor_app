%h2 Edit #{@event.name.capitalize} event
= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :start_date
    %br
    = f.datetime_select :start_date
  .field
    = f.label :end_date
    %br
    = f.datetime_select :end_date
  .field
    = f.label :location
    %br
    = f.text_field :location
    %br
    %br
  .dev-butt
    = f.submit
  %br
.dev-butt
  #{button_to "Delete this event", event_path(@event), data: { confirm: "Are you sure?" }, method: :delete}
%br
  = link_to "Back", :back